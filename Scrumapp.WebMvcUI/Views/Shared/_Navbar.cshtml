@using Microsoft.AspNetCore.Identity
@using Scrumapp.Data.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Scrumapp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            @if (SignInManager.IsSignedIn(User))
            {
                if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Project" asp-action="Index">Проекты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Index">Пользователи</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Role" asp-action="Index">Роли</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Project" asp-action="Index">Проекты</a>
                    </li>
                }
            }

        </ul>
        @await Html.PartialAsync("_LoginPartial")
    </div>
</nav>