@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity
@using Scrumapp.Data.Models
@using Scrumapp.WebMvcUI.Models.AccountViewModels
@model Scrumapp.WebMvcUI.Models.AccountViewModels.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Вход";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-5">
            <section>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <h4>Используйте зарегистрированную учетную запись для входа в систему.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Пароль</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Войти</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-action="ForgotPassword">Забыли свой пароль?</a>
                        </p>
                        <p>
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Зарегистрироваться как новый пользователь?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h4>О Scrumapp приложении и Agile методологии.</h4>
                <hr />
                <div>
                    <p>
                        Это приложение предоставляет множество сервисов для управления любыми вашими проектами. Эти сервисы настроены в соответствии с Agile методологией.
                        Прочтите <a href="https://skillbox.ru/media/management/kak_ispolzovat_agile_i_scrum/">эту статью</a> для получения подробной информации о методологии управления проектами Agile и Scrum.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
