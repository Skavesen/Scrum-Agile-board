@model Scrumapp.WebMvcUI.Models.ProjectViewModels.ProjectIndexViewModel
@{
    ViewData["Title"] = "Проекты";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-12">
            <section>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Описание</th>
                            <th class="text-center" style="width: 220px;">Действие</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model.Projects)
                        {
                            <tr>
                                <td>@project.Name</td>
                                <td>@project.Description</td>
                                <td class="text-center">
                                    <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning">Изменить</a>
                                    <a asp-controller="Scrum" asp-action="Index" asp-route-id="@project.Id" class="btn btn-info">
                                        Доска
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Project" asp-action="Create" class="btn btn-success">Создать новый</a>
            </section>
        </div>
    </div>
</div>


