@using Scrumapp.WebMvcUI.Models.AccountViewModels
@model Scrumapp.WebMvcUI.Models.ScrumViewModels.BoardAddTaskViewModel
@{
    ViewData["Title"] = "Добавить задачу";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-5">
            <section>
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <h4>Добавить задачу</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="ProjectId" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Content">Описание</label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label asp-for="Hour">Часов</label>
                                <input asp-for="Hour" class="form-control" />
                                <span asp-validation-for="Hour" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Minute">Минут</label>
                                <input asp-for="Minute" class="form-control" />
                                <span asp-validation-for="Minute" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <select id="userId" name="userId" class="form-control">
                            @foreach (var user in Model.Users)
                            {
                                <option value="@user.UserId">@user.UserRoleName - @user.FirstName @user.LastName</option>
                            }
                        </select>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-info">Добавить задачу</button>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
