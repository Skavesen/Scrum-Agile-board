@using Scrumapp.WebMvcUI.Models.AccountViewModels
@model Scrumapp.WebMvcUI.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Забыли свой пароль?";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-5">
            <section>
                <form asp-action="ForgotPassword" method="post">
                    <h4>Введите свой адрес электронной почты.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Далее</button>
                </form>
            </section>
        </div>
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h4>О Scrumapp приложении и Agile методологии.</h4>
                <hr />
                <div>
                    <p>
                        Это приложение предоставляет множество сервисов для управления любыми вашими проектами. Эти сервисы настроены в соответствии с Agile методологией.
                        Прочтите <a href="https://skillbox.ru/media/management/kak_ispolzovat_agile_i_scrum/">эту статью</a> для получения подробной информации о методологии управления проектами Agile и Scrum.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
